<% if admin_signed_in? || manager_signed_in? %>
<div class="container">
  <h2>ロケール名：<%= @locale.locale_name %> admin_id:<%= @locale.admin_id %></h2>
  <%= link_to "Staff追加", new_locale_staff_path(@locale.id), class: "btn btn-outline-info" %>
</div>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>名前</th>
        <th>出勤時間</th>
        <th>退勤</th>
        <th>出退勤ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @staffs.count == 0 %>
        <td>所属スタッフはいません</td>
        <td></td>
        <td></td>
        <td></td>
      <% else %>
        <% @staffs.each do |staff| %>
        <tr>
          <td><%= staff.family_name %><%= staff.given_name %><%= staff.id %></td>
          <td>出勤時間</td>
          <% if staff.status == 0 %>
            <% @staff_works = @works.where(staff_id: staff.id) %>
            <% @staff_works.each do |work| %>
              <td><%= work.in %></td>
              <td><%= work.out %></td>
            <% end %>
          <% else %>
            <td>出勤中</td>
          <% end %>
          <td><%= link_to '編集', edit_locale_staff_path(staff.locale_id, staff.id) %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<% elsif signed_in? %>
  <%= render 'punch', locale: @locale %>
<% end %>