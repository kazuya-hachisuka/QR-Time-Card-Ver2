<div class="container-fluid" style="background-color:#f5f5f5; height:550px;">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h3 class="text-center mt-3">勤務地追加</h3>
      <%= form_with(model:@locale) do |locale|%>
      <form class="justify-content-center px-md-5 px-3">
        <div class="form-group mx-3">
          <%= locale.label :勤務地名 %>
          <%= locale.text_field :locale_name, class: "form-control" %>
          <%= locale.hidden_field :control_number, value: @control_number %>
          <%= locale.hidden_field :admin_id, value: current_admin.id %>
          <%= locale.label :パスワード %>
          <%= locale.password_field :password, class: "form-control" %>
          <%= locale.label :パスワード確認 %>
          <%= locale.password_field :password_confirmation, class: "form-control"%>
        </div>
        <div class="form-group mx-3">
          <div class="float-right">
            <%= link_to '戻る', admin_path(current_admin), class: "btn btn-outline-dark mr-2" %>
            <%= locale.submit '追加', class: "btn btn-info" %>
          </div>
        </div>
      <% end %>
      </form>
    </div>
  </div>
</div>