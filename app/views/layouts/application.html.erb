<!DOCTYPE html>
<html>
  <head>
    <title>QR-Time-Card-ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar sticky-top" style="background-color:#ff8e00;">
      <a class="navbar-brand" href="#">Sticky top</a>
      <% if admin_signed_in? %>
        <%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-danger", method: :delete %>
      <% else %>
        <%= link_to "ログイン", new_admin_session_path, class: "btn btn-info" %>
        <%= link_to "登録", new_admin_registration_path, class: "btn btn-primary" %>
      <% end %>
    </nav>
  </header>
    <div class="container">
      <%= yield %>
    </div>
    <footer class="fixed-bottom" style="background-color:#ff8e00">
      <div class="container">
        <div class="row">
          <span class="text-monospace m-2">QR-TimeCard</span>
        </div>
      </div>
    </footer>
  </body>
</html>
