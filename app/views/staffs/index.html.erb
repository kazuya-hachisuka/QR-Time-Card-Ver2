<div class="container">
  <div class="row">
    <h2>Admin staff index</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>名前</th>
          <th>所属</th>
          <th>勤怠</th>
          <th>編集</th>
        </tr>
      </thead>
      <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td><%= staff.family_name %>&ensp;<%= staff.given_name %></td>
          <% @locale = Locale.find_by(id: staff.locale_id) %>
          <td><%= @locale.locale_name %></td>
          <td><%= link_to '勤怠', 'staff_works_path', class:"btn btn-info btn-sm" %></td>
          <td><%= link_to '編集', '#', class: "btn btn-outline-dark btn-sm" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>