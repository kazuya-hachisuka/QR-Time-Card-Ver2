<div class="container">
  <div class="row">
    <h2 class="p-2"><%= current_admin.company_name %>のスタッフ一覧</h2>
    <div class="container">
      <div class="row">
        <div class="form-group">
          <%= link_to '戻る', admin_path(current_admin), class:"btn btn-outline-dark btn-sm" %>
          <%= link_to 'スタッフ追加', new_admin_staff_path(current_admin), class:"btn btn-outline-success btn-sm" %>
        </div>
      </div>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>名前</th>
          <th>所属</th>
          <th>勤怠</th>
          <th>プロフィール編集</th>
        </tr>
      </thead>
      <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td><%= staff.family_name %>&ensp;<%= staff.given_name %></td>
          <td><%= staff.locale.locale_name %></td>
          <td><%= link_to '勤怠', staff_works_path(staff.id), class:"btn btn-info btn-sm" %></td>
          <td><%= link_to '編集', edit_admin_staff_path(current_admin.id,staff.id), class: "btn btn-outline-dark btn-sm" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>