<div class="container-fluid" style="background-color:#f5f5f5; height:550px;">
    <%= link_to '一覧へ戻る', admin_staffs_path(current_admin), class:"btn btn-outline-dark btn-sm my-3" %>
    <%= flash[:staff_create_result] %>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
    <div class="card">
    <div class="card-body">
      <h3 class="text-center"><%= @staff.given_name %>&emsp;<%= @staff.family_name %></h3>
      <div class="justify-content-center px-md-5 px-3">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">名前(カナ)：
            <span class="h5"><%= @staff.given_name_kana %>&emsp;<%= @staff.family_name_kana %></span>
          </li>
          <li class="list-group-item">所属：
            <span class="h5"><%= @locale.locale_name %></span>
          </li>
        </ul>
        <div class="float-right mt-3">
        <%= link_to '編集', edit_admin_staff_path(current_admin,@staff), class:"btn btn-outline-info" %>
        <%= link_to 'QRコード表示', admin_staff_qrcodes_path(current_admin,@staff), class:"btn btn-outline-success mx-2" %>
        </div>
      </div>
    </div>
    </div>
    </div>
  </div>
</div>