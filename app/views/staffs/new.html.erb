<h2>Staff Create</h2>
<%= form_for @staff, url:locale_staffs_path do |f| %>
<%= "所属ロケール: #{@locale.locale_name}" %>
<div class="container">
  <div class="form-row col-md-6">
    <div class="form-group col-md-6">
      <%= f.label :姓 %>
      <%= f.text_field :family_name, class: "form-control", placeholder: "姓" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :名 %>
      <%= f.text_field :given_name, class: "form-control", placeholder: "名" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :セイ %>
      <%= f.text_field :family_name_kana, class: "form-control", placeholder: "セイ" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :メイ %>
      <%= f.text_field :given_name_kana, class: "form-control", placeholder: "メイ" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.submit '追加', class: "btn btn-outline-info" %>
    </div>
  </div>
</div>
<% end %>