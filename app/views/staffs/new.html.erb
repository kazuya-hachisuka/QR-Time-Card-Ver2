<div class="container-fluid" style="background-color:#f5f5f5; height:550px;">
  <div class="row">
    <%= flash[:staff_create_result] %>
    <div class="col-sm-6 offset-sm-3">
      <h3 class="text-center mt-3">スタッフの追加</h3>
      <%= form_with(model: @staff, url:admin_staffs_path) do |f| %>
      <form class="justify-content-center px-md-5 px-3">
        <div class="form-row col-md-12">
          <div class="form-group col-md-6">
            <%= f.label :姓 %>
            <%= f.text_field :family_name, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :名 %>
            <%= f.text_field :given_name, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :セイ %>
            <%= f.text_field :family_name_kana, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :メイ %>
            <%= f.text_field :given_name_kana, class: "form-control" %>
          </div>
          <div class="form-group col-12">
            <%= f.label :所属 %>
            <%= f.collection_select :locale_id, @locale, :id, :locale_name,{},class:"form-control" %>
            <%= f.hidden_field :admin_id, value: @admin.id %>
          </div>
          <div class="form-group col-12">
            <div class="float-right">
              <%= link_to "戻る", admin_path(current_admin), class:"btn btn-outline-dark mr-2" %>
              <%= f.submit '追加', class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>