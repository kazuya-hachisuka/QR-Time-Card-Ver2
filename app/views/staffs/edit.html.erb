<h2>Staff Edit</h2>
<%= form_for @staff, url:locale_staff_path do |f| %>
<div class="container justify-content-center">
  <div class="row con">
    <div class="form-row col-md-6">
      <div class="form-group col-md-6">
        <%= f.label :姓 %>
        <%= f.text_field :family_name, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :セイ %>
        <%= f.text_field :family_name_kana, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :名 %>
        <%= f.text_field :given_name, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :メイ %>
        <%= f.text_field :given_name_kana, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :所属 %>
        <%= f.collection_select :locale_id, @locale, :id, :locale_name, {},class:"form-control" %>
        <%= f.submit '更新', class: "btn btn-outline-info mt-3" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card" style="width:18rem;">
        <div class="card-header">
          <div class="h3 text-center">
            <%= "#{@staff.family_name} #{@staff.given_name}" %>
          </div>
        </div>
        <div class="card-body text-center">
          <%= @qr %>
        </div>
        <div class="card-footer">
          <%= @staff.admin_id %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>