<div class="container">
  <div class="row">
    <div class="h4 col-5"><%= @locale.locale_name %></div>
    <div class="h5 col-5"><%= @staff.family_name %>&ensp;<%= @staff.given_name %></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>出勤</th>
          <th>退勤</th>
          <th>勤務時間</th>
        </tr>
      </thead>
      <tbody>
        <td><%= timeFormat(@work.in) %></td>
        <td><%= timeFormat(@work.out) %></td>
        <td><%= workingHours(@work) %></td>
      </tbody>
    </table>
  </div>
</div>
<% if @work_breaks.exists? %>
  <div class="container mt-5">
    <div class="row">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>休憩入</th>
            <th>戻り</th>
            <th>休憩合計</th>
          </tr>
        </thead>
          <% @work_breaks.each do |work_break| %>
          <tbody>
            <td><%= timeFormat(work_break.in) %></td>
            <td><%= timeFormat(work_break.out) %></td>
            <td><%= totalWorkBreak(work_break) %></td>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
<% end %>