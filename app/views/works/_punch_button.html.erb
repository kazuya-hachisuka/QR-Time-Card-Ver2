<%# status == 0 出勤前 %>
<% if @staff.status == 0 %>
  <%= link_to '出勤', staff_works_path(params[:staff_id]), class:"btn btn-info", method: :post %>
<%# status == 1 出勤中 %>
<% elsif @staff.status == 1 %>
  <div class="btn btn-success">休憩</div>
  <% work = @staff.works.where(out: nil) %>
    <% work.each do |work| %>
      <%= link_to '退勤', staff_punch_out_path(params[:staff_id],work.id), class:"btn btn-danger", method: :patch %>
    <% end %>
<%# status == 2 休憩中 %>
<% elsif @staff.status == 2 %>
  <div class="btn btn-warning">戻り</div>
<% end %>