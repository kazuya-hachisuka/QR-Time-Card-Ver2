<div class="container">
  <div class="row">
  <%= flash[:error] %>
    <div class="card-columns mx-auto mt-5">
      <div class="card overflow-auto" style="max-height:300px;">
        <div class="card-body text-center">
          <h4 class="font-weight-bold">勤務地メニュー</h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item h5"><%= link_to '勤務地追加', new_locale_path %></li>
          <% @locale.each do |locale| %>
            <li class="list-group-item h5"><%= link_to "#{locale.locale_name}", locale_path(locale) %></li>
          <% end %>
          </ul>
        </div>
      </div>
      <div class="card">
        <div class="card-body text-center">
          <h4 class="font-weight-bold">スタッフメニュー</h4>
          <ul class="list-group list-group-flush overflow-auto">
            <li class="h5 list-group-item"><%= link_to 'スタッフ一覧', admin_staffs_path(current_admin.id) %></li>
            <li class="h5 list-group-item"><%= link_to 'スタッフ追加', new_admin_staff_path(current_admin.id) %></li>
          </ul>
        </div>
      </div>
      <div class="card">
        <div class="card-body text-center">
          <h4 class="font-weight-bold">管理者メニュー</h4>
          <ul class="list-group list-group-flush">
            <li class="h5 list-group-item"><%= link_to '管理者情報変更', edit_admin_registration_path(current_admin.id) %></li>
          </ul>
        </div>
      </div>
      <div class="card">
        <div class="card-body text-center">
          <h4 class="font-weight-bold">マネージャーメニュー</h4>
          <ul class="list-group list-group-flush">
            <li class="h5 list-group-item"><%= link_to 'マネージャー一覧', admin_managers_path(current_admin.id) %></li>
            <li class="h5 list-group-item"><%= link_to 'マネージャー追加', admin_managers_sing_up_path(current_admin.id) %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>